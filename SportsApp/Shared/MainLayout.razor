@inherits LayoutComponentBase
@using StateManager

<MudThemeProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar Style="@($"color:{Colors.Grey.Darken3}; background:{Colors.Grey.Lighten2};")" Fixed="true" Dense="true" Bottom="true">
        @if (StateManager.CurrentUser == null)
        {
            <MudNavLink Href="/" Icon="@Icons.Filled.Home"></MudNavLink>
            <MudNavLink Href="/search" Icon="@Icons.Filled.Search"></MudNavLink>
            <MudNavLink Href="/login" Icon="@Icons.Filled.Person"></MudNavLink>
        } else if (StateManager.CurrentUser.AccessLevel == "Citizen")
        {
            <MudNavLink Href="/" Icon="@Icons.Filled.Home"></MudNavLink>
            <MudNavLink Href="/search" Icon="@Icons.Filled.Search"></MudNavLink>
            <MudNavLink Href="/profile" Icon="@Icons.Filled.Person"></MudNavLink>
        } else {
            <MudNavLink Href="/" Icon="@Icons.Filled.Home"></MudNavLink>
            <MudNavLink Href="/createEvent" Icon="@Icons.Filled.Create"></MudNavLink>
            <MudNavLink Href="/profile" Icon="@Icons.Filled.Person"></MudNavLink>
        }
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

