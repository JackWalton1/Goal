@page "/eventDescription"
@using SportsApp
@using StateManager

<MudContainer Class="px-8">
    <MudStack Spacing="4">
        <MudButton Class="align-content-start justify-content-start" Size="Size.Large" Href="/" StartIcon="@Icons.Material.Filled.ChevronLeft">back to home</MudButton>
        <MudItem Class="d-flex justify-space-between flex-grow-1">
            <MudText Typo="Typo.h3" Align="Align.Center">@StateManager.CurrentEvent.Title</MudText>
            <MudIcon Icon="@StateManager.CurrentEvent.Icon" Align="center" />
        </MudItem>
        <MudImage ObjectFit="ObjectFit.Cover" Src=@StateManager.CurrentEvent.ImageURL Class="rounded-lg" Height="300" />
        <MudItem>
            <MudText Typo="Typo.h5" Align="Align.Center">event overview</MudText>
            <MudList>
                <MudListItem Avatar="@Icons.Filled.LocationOn">
                    @StateManager.CurrentEvent.VenueName
                </MudListItem>
                <MudListItem Avatar="@Icons.Filled.Map">
                    @StateManager.CurrentEvent.VenueAddress
                </MudListItem>
                <MudListItem Avatar="@Icons.Filled.DateRange">
                    @StateManager.CurrentEvent.Date
                </MudListItem>
            </MudList>
        </MudItem>
                <MudButton Class="align-content-start justify-content-start" Size="Size.Large" Href="/eventPay">buy ticket</MudButton>
        <MudItem>
            <MudText Typo="Typo.h5" Align="Align.Center">event description</MudText>
            @StateManager.CurrentEvent.Description
        </MudItem>
    </MudStack>
</MudContainer>


