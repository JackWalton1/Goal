@page "/signup"
@using MongoDB.Driver
@using System.Diagnostics

<MudContainer>
    <MudStack Spacing="4">
        <MudContainer Class="d-flex justify-center">
            <MudImage ObjectPosition.Center src="Images/goal.jpg" Alt="goal logo" Width="300" />
        </MudContainer>
        <MudTextField Align="center" Required="true" RequiredError="Username is required" @bind-Value="Username" Label="username" Variant="Variant.Outlined"></MudTextField>
        <MudTextField Align="center" Required="true" RequiredError="Password is required" @bind-Value="Password" Label="password" Variant="Variant.Outlined"></MudTextField>
        <MudTextField Align="center" Required="true" RequiredError="Location is required" @bind-Value="LocationString" Label="location" Variant="Variant.Outlined"></MudTextField>
        @*<MudPaper Class="d-inline-flex pa-4">
            I am a Town Admin
        </MudPaper>
        <MudPaper Class="d-inline-flex pa-4">
            I am a regular user
        </MudPaper>*@
        <MudButton Align="center" Variant="Variant.Filled" OnClick="startConnection">create account</MudButton>
        <MudButton Align="center" Size="Size.Large" Href="/login" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">registered before? log in</MudButton>
        <MudButton Align="center" Size="Size.Large" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">continue without logging in</MudButton>
        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Translate" Color="Color.Primary" Class="ml-auto">Translate</MudButton>
    </MudStack>
</MudContainer>

@code {

    public string Username { get; set; }
    public string Password { get; set; }
    public string LocationString { get; set; }


    public async void startConnection()
    {
        string connectionString = "mongodb+srv://cchannui:cchannui@cluster0.zjtdqmq.mongodb.net/test";
        string databaseName = "sports_app";
        string collectionName = "users";

        // Establish connection to MongoDB.
        var client = new MongoClient(connectionString);
        var db = client.GetDatabase(databaseName);
        var collection = db.GetCollection<UserModel>(collectionName);

        // Create new UserModel object.
        var user = new UserModel { Username = Username, Password = Password, LocationString = LocationString };

        // Insert UserModel object into MongoDB.
        if(user.Username != null || user.Password != null || user.LocationString != null)
        {
            await collection.InsertOneAsync(user);
        }


        // Locate document with Username field equal to "carter2020"
        var results = await collection.FindAsync(document => document.Username == "carter2020");
        Debug.WriteLine(results);
    }

}
