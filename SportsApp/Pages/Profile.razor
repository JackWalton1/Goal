@page "/profile"

<MudStack>
    <MudPaper Class="pa-4">
        <MudContainer Class="d-flex justify-center align-center">
            <MudStack Justify="Justify.Center" Spacing="0">
                <MudImage src="Images/profile_image.png" />
                <MudText Align="Align.Center" Typo="Typo.h3">jane doe</MudText>
                <MudText Align="Align.Center" Typo="Typo.subtitle1">Rome, Italy</MudText>
            </MudStack>
        </MudContainer>
    </MudPaper>

    <MudButton Size="Size.Large" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">view what you're following</MudButton>
    <MudButton Size="Size.Large" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">view your tickets</MudButton>
    <MudButton Size="Size.Large" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">pay membership fees</MudButton>
    <MudButton Size="Size.Large" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">edit profile and location</MudButton>
    <MudButton Size="Size.Large" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">log last workout</MudButton>
    <MudButton Size="Size.Large" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">view/set activity goals</MudButton>
    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Translate" Color="Color.Primary" Class="ml-auto">Translate</MudButton>
</MudStack>

