@page "/discover"

<MudContainer Class="pa-8">
    <MudStack Spacing="16">
        <MudItem>
            <MudText Typo="Typo.h3" Align="Align.Center">discover</MudText>
            <MudText Align="Align.Center">discover new events based on your interests and follow history.</MudText>
        </MudItem>

        <!--Recommended events-->
        <MudStack Spacing="4">
            <MudText Typo="Typo.h4" Align="Align.Left">events you may like</MudText>
            <MudStack Row="true" Class="overflow-scroll">
                <!--TODO: REPLACE WITH CONDITIONAL RENDERING FROM DATABASE-->
                <SportsApp.Components.EventCardsSampleDisplay />
            </MudStack>
        </MudStack>

        <MudStack Spacing="4">
            <MudText Typo="Typo.h4" Align="Align.Left">events near you</MudText>
            <MudCard Elevation="25" Class="d-flex pa-4 align-content-center rounded-lg">
                <MudItem Class="d-flex justify-space-between flex-grow-1">
                    <!--TODO: REPLACE WITH CURRENT USER LOCATION-->
                    <MudText Typo="Typo.h5" Align="Align.Left">rome, italy</MudText>
                    <MudImage Align="right" src="Images/location-pin.png" Height="30" />
                </MudItem>
            </MudCard>

            <!--TODO: REPLACE WITH MAP WITH LOCATIONS OF NEARBY EVENTS-->
            <MudPaper Elevation="0" Class="pa-4" Style="height: 600px; width: 1200px; ">
                <iframe src="MapTest.html"></iframe>
            </MudPaper>

            <MudButton Size="Size.Large" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">select a different location</MudButton>

            <MudStack Row="true" Class="overflow-scroll">
                <!--TODO: REPLACE WITH CONDITIONAL RENDERING FROM DATABASE-->
                <SportsApp.Components.EventCardsSampleDisplay />
            </MudStack>
        </MudStack>

        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Translate" Color="Color.Primary" Class="ml-auto">Translate</MudButton>
    </MudStack>
</MudContainer>

