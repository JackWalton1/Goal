@using System.ComponentModel.DataAnnotations
@page "/createEvent"

<MudStack Spacing="4">
    <MudItem>
        <MudText Typo="Typo.h3" Align="Align.Center">Create event</MudText>
        <MudText Align="Align.Center">Upload a new event below.</MudText>
    </MudItem>
    <MudCard>
        <MudForm>
            <MudCardContent>
                <MudTextField For="@(() => model.String)" Label="Event Title" />
                <MudTextField For="@(() => model.String)" Label="Event Description" />
                <MudDatePicker For="@(() => model.Date)" Label="Date" />
            </MudCardContent>
        </MudForm>
        <MudCardActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Create Event</MudButton>
        </MudCardActions>
    </MudCard>
    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Translate" Color="Color.Primary" Class="ml-auto">Translate</MudButton>
</MudStack>

@code {
    DisplayNameLabelClass model = new();

    public class DisplayNameLabelClass
    {
        [Label("Date LabelAttribute")]
        public DateTime? Date { get; set; }
        [Label("Boolean LabelAttribute")]
        public bool Boolean { get; set; }
        [Label("String LabelAttribute")]
        public string String { get; set; }
    }

}
