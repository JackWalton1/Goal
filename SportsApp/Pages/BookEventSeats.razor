@page "/bookEventSeats"

<MudContainer>
    <MudStack Spacing="4">
        <MudItem>
            <MudText Typo="Typo.h3" Align="Align.Center">Book event seats</MudText>
            <MudText Align="Align.Center">View all available seats for your selected event below.</MudText>
        </MudItem>
        <MudCard Elevation="25" Class="d-flex pa-4 align-content-center rounded-lg">
            <MudGrid Spacing="2" Justify="Justify.Center">
                <MudItem xs="6">
                    <MudText Typo="Typo.h5" Align="Align.Left">Roma vs. Lazio</MudText>
                </MudItem>
                <MudItem xs="6">
                    <MudImage Align="right" src="Images/soccer-ball-variant.png" Alt="soccer ball logo" Width="30" />
                </MudItem>
            </MudGrid>
        </MudCard>
        <MudButton Size="Size.Large" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">select a different event</MudButton>
        <MudCard Elevation="25" Class="d-flex pa-4 align-content-center rounded-lg">
            <MudGrid Spacing="2" Justify="Justify.Center">
                <MudItem xs="12">
                    <MudText Typo="Typo.h5" Align="Align.Left">Select your seat</MudText>
                </MudItem>
                <MudItem xs="12">
                    <MudImage Fluid="true" Align="center" src="Images/stadium_ticket_map.png" Alt="ticket seat map" />
                </MudItem>
            </MudGrid>
        </MudCard>
        <MudButton Size="Size.Large" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">continue</MudButton>
    </MudStack>
</MudContainer>

