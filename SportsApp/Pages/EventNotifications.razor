@page "/eventNotifications"
@*<MudText Typo="Typo.h3" Align="Align.Center">Add event notifications</MudText>
    <MudText Align="Align.Center">Add event notifications below.</MudText>*@

<MudStack Spacing="8">
    <MudItem>
        <MudText Typo="Typo.h3" Align="Align.Center">Add event notifications</MudText>
        <MudText Align="Align.Center">Add event notifications below.</MudText>
    </MudItem>
    <MudStack Spacing="4">
        <MudText Typo="Typo.h4" Align="Align.Left">Your upcoming events</MudText>
        <MudStack Row="true">
            <MudImage Class="rounded-lg" Src="Images/image_template1.jpg" Width="300" Height="200" />
            <MudImage Class="rounded-lg" Src="Images/image_template2.jpg" Width="300" Height="200" />
        </MudStack>
    </MudStack>
    <MudStack Spacing="4">
        <MudText Typo="Typo.h4" Align="Align.Left">Events and centers you follow</MudText>
        <MudStack Row="true">
            <MudImage Class="rounded-lg" Src="Images/image_template2.jpg" Width="300" Height="200" />
        </MudStack>
    </MudStack>
</MudStack>

<MudButton Size="Size.Large" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">Notify me for all</MudButton>
<MudButton Size="Size.Large" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">Notify me for upcoming event</MudButton>
<MudButton Size="Size.Large" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">Notify me for reccomended events</MudButton>

