@page "/search"

<MudContainer Class="pa-8">
    <MudStack Spacing="16">
        <MudItem>
            <MudText Typo="Typo.h3" Align="Align.Center">search</MudText>
            <MudText Align="Align.Center">discover new events and find events you've heard about.</MudText>
        </MudItem>

        <!--Keywords-->
        <MudItem>
            <MudText Typo="Typo.h4">keywords</MudText>
            <MudTextField @bind-Value="keywords" Label="Ex.Roma Women's Tennis..." Variant="Variant.Outlined"></MudTextField>
        </MudItem>

        <!--Location-->
        <MudItem>
            <MudText Typo="Typo.h4">location</MudText>
            <MudTextField @bind-Value="location" Label="Enter city, region, zip, etc.." Variant="Variant.Outlined"></MudTextField>
        </MudItem>

        <!--Sports-->
        <MudItem>
            <MudText Typo="Typo.h4">sports</MudText>
            <MudStack Row="true" Class="d-flex flex-wrap gap-4 justify-content-center">
                <SportsApp.Components.SportSearchIcon icon="@Icons.Filled.SportsBasketball" />
                <SportsApp.Components.SportSearchIcon icon="@Icons.Filled.SportsSoccer" />
                <SportsApp.Components.SportSearchIcon icon="@Icons.Filled.SportsTennis" />
                <SportsApp.Components.SportSearchIcon icon="@Icons.Filled.SportsRugby" />
                <SportsApp.Components.SportSearchIcon icon="@Icons.Filled.SportsGolf" />
                <SportsApp.Components.SportSearchIcon icon="@Icons.Filled.SportsCricket" />
                <SportsApp.Components.SportSearchIcon icon="@Icons.Filled.SportsGymnastics" />
                <SportsApp.Components.SportSearchIcon icon="@Icons.Filled.SportsHockey" />
                <SportsApp.Components.SportSearchIcon icon="@Icons.Filled.SportsMotorsports" />
            </MudStack>
        </MudItem>

        <MudButton Align="center" Size="Size.Large" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">More filters</MudButton>
        <MudButton Variant="Variant.Filled" Align="center" Size="Size.Large" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">search</MudButton>

    </MudStack>
</MudContainer>

@code {
    public string keywords { get; set; }
    public string location { get; set; }
}
