        <MudTextField @bind-Value="TextValue" Label="Ex.Roma Women's Tennis..." Variant="Variant.Outlined"></MudTextField>
    </MudContainer>
</MudItem>
<br />
<br />
<br />

<p role="status">Location</p>
<MudItem xs="12">
    <MudContainer Class="d-flex justify-center align-center">
        <MudTextField @bind-Value="TextValue" Label="Enter city, region, zip, etc.." Variant="Variant.Outlined"></MudTextField>
    </MudContainer>
</MudItem>
<br />
<br />
<br />
<div class="container-fluid">
    <div class="row">
        <left>
            <p role="status">Sports</p>
            <img src="Images/basketball-ball-variant.png" width="60" height="50" />
            <img src="Images/tennis.png" width="60" height="50" />
            <img src="Images/rugby.png" width="60" height="50" />
            <img src="Images/volleyball-ball.png" width="60" height="50" />

        </left>
    </div>
    <div class="row">
        <left>
            <p role="status">Sports</p>
            <img src="Images/water-polo-game.png" width="60" height="50" />
            <img src="Images/soccer-ball-variant.png" width="60" height="50" />
            <img src="Images/golf-player.png" width="60" height="50" />
            <img src="Images/option.png" width="60" height="50" />

        </left>
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <center>
            <h2>More Filters ></h2>
            <button class="btn btn-primary"> Search</button>
        </center>
    </div>
</div>

@code {
    public string TextValue { get; set; }
    public int spacing { get; set; } = 2;
}
