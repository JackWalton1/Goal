@page "/search"

<MudStack Spacing="8">
    <MudItem>
        <MudText Typo="Typo.h3" Align="Align.Center">Search</MudText>
        <MudText Align="Align.Center">Discover new events and find events you've heard about.</MudText>
    </MudItem>
    <MudItem>
        <MudText Typo="Typo.h4">Keywords</MudText>
        <MudTextField @bind-Value="TextValue" Label="Ex.Roma Women's Tennis..." Variant="Variant.Outlined"></MudTextField>
    </MudItem>
    <MudItem>
        <MudText Typo="Typo.h4">Location</MudText>
        <MudTextField @bind-Value="TextValue" Label="Enter city, region, zip, etc.." Variant="Variant.Outlined"></MudTextField>
    </MudItem>
    <MudItem>
        <MudText Typo="Typo.h4">Sports</MudText>
        <MudStack Row="true">
            <MudCard Elevation="25" Class="d-flex pa-4 align-content-center rounded-lg">
                <MudImage Src="Images/basketball-ball-variant.png" Width="60" Height="60" />
            </MudCard>
            <MudCard Elevation="25" Class="d-flex pa-4 align-content-center rounded-lg">
                <MudImage Src="Images/tennis.png" Width="60" Height="60" />
            </MudCard>
            <MudCard Elevation="25" Class="d-flex pa-4 align-content-center rounded-lg">
                <MudImage Src="Images/rugby.png" Width="60" Height="60" />
            </MudCard>
            <MudCard Elevation="25" Class="d-flex pa-4 align-content-center rounded-lg">
                <MudImage Src="Images/volleyball-ball.png" Width="60" Height="60" />
            </MudCard>
            <MudCard Elevation="25" Class="d-flex pa-4 align-content-center rounded-lg">
                <MudImage Src="Images/water-polo-game.png" Width="60" Height="60" />
            </MudCard>
            <MudCard Elevation="25" Class="d-flex pa-4 align-content-center rounded-lg">
                <MudImage Src="Images/soccer-ball-variant.png" Width="60" Height="60" />
            </MudCard>
            <MudCard Elevation="25" Class="d-flex pa-4 align-content-center rounded-lg">
                <MudImage Src="Images/golf-player.png" Width="60" Height="60" />
            </MudCard>
            <MudCard Elevation="25" Class="d-flex pa-4 align-content-center rounded-lg">
                <MudImage Src="Images/option.png" Width="60" Height="60" />
            </MudCard>
        </MudStack>
    </MudItem>
    <MudButton Align="center" Size="Size.Large" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">More filters</MudButton>
    <MudButton Variant="Variant.Filled" Align="center" Size="Size.Large" EndIcon="@Icons.Material.Filled.ChevronRight" FullWidth="true">search</MudButton>
    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Translate" Color="Color.Primary" Class="ml-auto">Translate</MudButton>

</MudStack>

@code {
    public string TextValue { get; set; }
}
